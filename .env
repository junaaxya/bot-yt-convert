# Concurrency and limits (tune for Pylex)
MAX_CONCURRENCY=1 # how many heavy jobs can run at once
MAX_DURATION_SEC=900 # reject YouTube > 15 minutes
MAX_FILE_MB=50 # reject media > 50MB for conversion
USE_YTDLP=1


# Optional: Custom UA for YouTube requests (some hosts need this)
#YTDL_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36


# WhatsApp bot owner (for admin-only commands if you add later)
OWNER_JID= # e.g., 6281234567890@s.whatsapp.net